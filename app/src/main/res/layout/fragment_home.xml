<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#8ABAAE">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_border">

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:text="Doctor Visit"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/docVisitTxtView"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25dp"
                android:gravity="center"
                android:textAlignment="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_border">

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="Medical Expenses"
                android:ems="10"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalAmountTxtView"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_border">

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="Last Visited Date"
                android:ems="10"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lastVisitedTxtView"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_border">

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="Self Heal"
                android:ems="10"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/selfHealCountTxtView"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25dp"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:text="Last Visited For"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:inputType="textMultiLine"/>

        <TextView
            android:id="@+id/reasonTxtView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:text=""
            android:ems="10"
            android:inputType="textMultiLine"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <Button
            android:id="@+id/healthPoliciesBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Health Policies" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>

